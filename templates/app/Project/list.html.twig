{% extends 'base.html.twig' %}

{% block body %}
    <div style="max-width: 900px; margin: auto;">
        <h1 style="font-size: 1.5rem; color: #333; margin-bottom: 1.5rem;">Liste des chantiers</h1>

        <table style="width: 100%; border-collapse: collapse; font-family: sans-serif; font-size: 0.95rem;">
            <thead>
                <tr style="background-color: #eaeaea; border-bottom: 2px solid #ccc;">
                    <th style="text-align: left; padding: 0.75rem;">Nom</th>
                    <th style="text-align: left; padding: 0.75rem;">Adresse</th>
                    <th style="text-align: left; padding: 0.75rem;">Date de début</th>
                    <th style="text-align: left; padding: 0.75rem;">Date de fin</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                    <tr style="background-color: {{ loop.index is odd ? '#f9f9f9' : '#fff' }}; border-bottom: 1px solid #ddd;">
                        <td style="padding: 0.75rem;">{{ project.name }}</td>
                        <td style="padding: 0.75rem;">{{ project.address }}</td>
                        <td style="padding: 0.75rem;">{{ project.dateStart|date('d/m/Y') }}</td>
                        <td style="padding: 0.75rem;">{{ project.dateEnd|date('d/m/Y') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" style="text-align: center; padding: 1rem; color: #777;">
                            Aucun chantier trouvé.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
