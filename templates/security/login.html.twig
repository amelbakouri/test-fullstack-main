{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
  <div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-sm border-0">
            <div class="card-body p-4 p-md-5">
              <h1 class="h4 mb-4 text-center">Se connecter</h1>

              {% if error %}
                <div class="alert alert-danger" role="alert">
                  {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
              {% endif %}

              {% if app.user %}
                <div class="alert alert-info d-flex justify-content-between align-items-center" role="alert">
                  Connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>
                  <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
              {% endif %}

              <form method="post" novalidate>
                <div class="mb-3">
                  <label for="inputMatricule" class="form-label">Matricule</label>
                  <input
                    type="text"
                    id="inputMatricule"
                    name="matricule"
                    class="form-control"
                    required
                    autofocus
                    autocomplete="username"
                    value="{{ last_username }}"
                    placeholder="Votre matricule"
                  >
                </div>

                <div class="mb-3">
                  <label for="inputPassword" class="form-label">Mot de passe</label>
                  <input
                    type="password"
                    id="inputPassword"
                    name="password"
                    class="form-control"
                    required
                    autocomplete="current-password"
                    placeholder="••••••••"
                  >
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary w-100" type="submit">Se connecter</button>
              </form>

              <p class="text-center text-muted small mt-3 mb-0">
                Pas encore de compte ?
                <a href="{{ path('app_register') }}">Créer un compte</a>
              </p>
            </div>
          </div>

          <p class="text-center text-muted small mt-3">
            Besoin d’aide ? Contactez l’administrateur.
          </p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
